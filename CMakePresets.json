{
    "version": 6,
    "cmakeMinimumRequired": {
	"major": 3,
	"minor": 25,
	"patch": 0
    },
    "configurePresets": [
	{
	    "name": "gcc-build",
	    "displayName": "Run/Build/Test with code coverage using GNU toolchain.",
	    "description": "Code coverage",
	    "binaryDir": "${sourceDir}/gcc-build",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "RelWithDebInfo",
		"CMAKE_CXX_FLAGS": "-coverage",
		"BUILD_TESTS": {
		    "type": "BOOL",
		    "value": "ON"
		},
		"BUILD_DEMOS": {
		    "type": "BOOL",
		    "value": "ON"
		}
	    }
	},
	{
	    "name": "clang-build",
	    "displayName": "Run/Build/Test with code coverage using LLVM toolchain.",
	    "description": "Code coverage",
	    "binaryDir": "${sourceDir}/clang-build",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "RelWithDebInfo",
		"CMAKE_CXX_FLAGS": "-coverage",
		"BUILD_TESTS": {
		    "type": "BOOL",
		    "value": "ON"
		},
		"BUILD_DEMOS": {
		    "type": "BOOL",
		    "value": "ON"
		}
	    }
	}
    ],
    "buildPresets": [
	{
	    "name": "gcc-build",
	    "configurePreset": "gcc-build",
	    "configuration": "RelWithDebInfo"
	},
	{
	    "name": "clang-build",
	    "configurePreset": "clang-build",
	    "configuration": "RelWithDebInfo"
	}
    ]
}
